    <!-- TextView -->
    <style name="orientedTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14dip</item>
    </style>

    <!-- Général : SeekBar -->
    <style name="CustomSeekBar" parent="android:Widget.SeekBar">
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:progressDrawable">@drawable/blue_seekbar</item>
        <item name="android:thumb">@drawable/blue_seekbar_thumb</item>
        <item name="android:thumbOffset">15dip</item>
    </style>
    
     <!-- Général : ProgressBar -->
    <style name="TextProgressBar" parent="android:Widget.SeekBar">
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:progressDrawable">@drawable/green_red_progressbar</item>
    </style>

    <!-- Général : RadioButton -->
    <style name="BlueRadioButton" parent="android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/blue_radio_button</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Général : small RadioButton -->
    <style name="BlueSmallRadioButton" parent="android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/blue_small_radio_button</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <!-- Général : Spinner -->
    <style name="CustomSpinner" parent="@android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">11dip</item>
        <item name="android:singleLine">true</item>
    </style>

